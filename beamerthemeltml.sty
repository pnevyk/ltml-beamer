\mode<presentation>

% REQUIREMENTS

\RequirePackage{xcolor}
\RequirePackage{caption}

% SETTINGS

\useinnertheme{ltml}
\useoutertheme{ltml}
\usecolortheme{ltml}
\usefonttheme{ltml}

\setbeamertemplate{navigation symbols}{}

% align top
\makeatletter
\beamer@centeredfalse
\makeatother

% captions
\captionsetup[figure]{labelfont={color=ltmlblue}}
\captionsetup[table]{labelfont={color=ltmlblue}}

% several subjective tweaks

% bold vectors
\renewcommand\vec{\mathbf}
% bold \emph
\let\emph\relax
\DeclareTextFontCommand{\emph}{\bfseries}

\mode<all>
